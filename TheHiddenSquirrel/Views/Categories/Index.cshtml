@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>
<a asp-controller="Categories" asp-action="Create" class="btn btn-primary">
    <i class="bi bi-plus-circle"></i> Create a Category
</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>
                <a asp-controller="Categories" asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-primary">
                        <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-controller="Categories" asp-action="Delete" asp-route-id="@category.CategoryId"
                    class="btn btn-danger" onclick="return confirmDelete();">
                        <i class="bi bi-trash-fill"></i> Delete
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>